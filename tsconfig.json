{
  "compilerOptions": {
    "allowJs": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "moduleResolution": "Node",
    "module": "ESNext",
    "sourceMap": false,
    "rootDir": "src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "target": "es2018",
    "typeRoots": ["types"]
  },
  "exclude": ["rollup.config.ts", "dist"]
}
